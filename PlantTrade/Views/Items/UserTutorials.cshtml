@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@model IEnumerable<PlantTrade.Models.Tutorial>

@{
    ViewData["Title"] = "Gebruiker Tutorials";
}

<div class="container">
    <div class="text-right mt-2">
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="btn btn-primary-report mb-2" asp-controller="Report" asp-action="ReportPage" asp-route-kind="Person" asp-route-reportId="@ViewBag.userId">Report</a>
        }
        else
        {
            <a class="btn btn-primary-report-disabled mb-2" href="">Report</a>
        }
    </div>
    <div class="row ItemUserGegevens mt-md-5 justify-content-center">
        <div class="col-md-2 my-5">
            <ul class="nav nav-pills flex-column GebruikerMenu">
                <li class="nav-item GebruikerMenuItem">
                    <a class="nav-link " id="profile" asp-controller="Items" asp-action="UserInformation" asp-route-id="@ViewBag.userId">Profiel</a>
                </li>
                <li class="nav-item GebruikerMenuItem">
                    <a class="nav-link" id="Producten" asp-controller="Items" asp-action="UserItems" asp-route-id="@ViewBag.userId">Items</a>
                </li>
                <li class="nav-item GebruikerMenuItem">
                    <a class="nav-link GebruikerMenuItemactive" id="tutorials" asp-controller="Items" asp-action="UserTutorials">Tutorials</a>
                </li>
            </ul>
        </div>

        <div class="col-sm-1"></div>
        <div class="col-lg-8 col-md-8 my-auto p-3 GegevensGebruiker">
            
                <div class="row">
                    @foreach (var tutorial in Model)
                    {

                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <iframe style="width:100%; height:250px" src="@Html.DisplayFor(Tutorial => tutorial.Link)" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                        <div class="col-lg-5 col-md-5 col-sm-12 my-auto">
                            <div class="">
                                <font size="+2">
                                    @Html.DisplayFor(modelItem => tutorial.Title)
                                </font>
                            </div>
                        </div>
                    }
                </div>
            
        </div>
        <div class="col-lg-1 col-md-1"></div>
    </div>
</div>