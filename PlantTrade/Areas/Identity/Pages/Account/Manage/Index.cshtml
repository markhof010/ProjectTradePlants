@page
@using PlantTrade.Views.Shared;
@model IndexModel
@{
    ViewData["Title"] = "Profiel";
    ViewData["ActivePage"] = ManageProfilePages.Profiel;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PostCode"></label>
                <input asp-for="Input.PostCode" class="form-control" />
                <span asp-validation-for="Input.PostCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Specialisme"></label>
                <input asp-for="Input.Specialisme" class="form-control" />
                <span asp-validation-for="Input.Specialisme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.About"></label>
                <textarea asp-for="Input.About" class="form-control"></textarea>
                <span asp-validation-for="Input.About" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Opslaan</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}