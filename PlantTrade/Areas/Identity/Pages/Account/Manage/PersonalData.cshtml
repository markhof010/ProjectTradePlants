@page
@using PlantTrade.Views.Shared;
@model PersonalDataModel
@{
    ViewData["Title"] = "Persoonlijke Data";
    ViewData["ActivePage"] = ManageProfilePages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Je account bevat persoonlijke informatie over u. Op deze pagina kunt u het verwijderen.</p>
        <p>
            <strong>Door op verwijderen te drukken verwijderd u uw account permanent en dit kan niet hersteld worden</strong>
        </p>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">Verwijderen</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}